    <!-- 2. ADIM: SCRIPTLER -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Select2 AyarlarÄ±
            $('#movie1').select2({ placeholder: "1. Filmi SeÃ§in...", allowClear: true, width: '100%' });
            $('#movie2').select2({ placeholder: "2. Filmi SeÃ§in...", allowClear: true, width: '100%' });

            // --- AFÄ°Åž DEÄžÄ°ÅžTÄ°RME MANTIÄžI (DÃœZELTÄ°LMÄ°Åž) ---
            
            // 1. Kutu deÄŸiÅŸtiÄŸinde
            $('#movie1').on('select2:select', function (e) {
                // SeÃ§ilen option elementini bul
                var selectedOption = $(this).find('option:selected');
                // Onun iÃ§indeki data-poster verisini 'attr' ile zorla al
                var posterUrl = selectedOption.attr('data-poster');

                console.log("Film 1 SeÃ§ildi, Poster:", posterUrl); // Hata ayÄ±klama iÃ§in konsola yazdÄ±r

                if (posterUrl) {
                    $('#poster1').attr('src', posterUrl);
                    $('#poster1').parent().addClass('active');
                }
            });

            // 1. Kutu temizlendiÄŸinde
            $('#movie1').on('select2:clear', function (e) {
                $('#poster1').attr('src', 'https://placehold.co/300x450/111/444?text=?');
                $('#poster1').parent().removeClass('active');
            });

            // 2. Kutu deÄŸiÅŸtiÄŸinde
            $('#movie2').on('select2:select', function (e) {
                var selectedOption = $(this).find('option:selected');
                var posterUrl = selectedOption.attr('data-poster');

                console.log("Film 2 SeÃ§ildi, Poster:", posterUrl);

                if (posterUrl) {
                    $('#poster2').attr('src', posterUrl);
                    $('#poster2').parent().addClass('active');
                }
            });

            // 2. Kutu temizlendiÄŸinde
            $('#movie2').on('select2:clear', function (e) {
                $('#poster2').attr('src', 'https://placehold.co/300x450/111/444?text=?');
                $('#poster2').parent().removeClass('active');
            });
        });

        async function compareMovies() {
            // DeÄŸerleri jQuery ile al
            const id1 = $('#movie1').val();
            const id2 = $('#movie2').val();
            const btn = document.getElementById('compareBtn');
            const resultBox = document.getElementById('versus-result');
            const resultContent = document.getElementById('result-content');

            if (!id1 || !id2) {
                alert("LÃ¼tfen iki film de seÃ§!");
                return;
            }

            if (id1 === id2) {
                alert("AynÄ± filmi kendisiyle kapÄ±ÅŸtÄ±ramazsÄ±n :)");
                return;
            }

            btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Analiz Ediliyor...';
            btn.disabled = true;
            resultBox.style.display = 'none';

            try {
                const response = await fetch('/api/versus', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id1, id2 })
                });
                
                const data = await response.json();
                
                resultContent.innerHTML = data.result;
                resultBox.style.display = 'block';
                resultBox.scrollIntoView({ behavior: 'smooth' });

            } catch (error) {
                alert("Bir hata oluÅŸtu: " + error);
            } finally {
                btn.innerHTML = 'ðŸ”¥ KarÅŸÄ±laÅŸtÄ±r';
                btn.disabled = false;
            }
        }
    </script>